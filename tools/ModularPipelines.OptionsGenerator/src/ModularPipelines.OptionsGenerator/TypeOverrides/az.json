{
  "$schema": "./schema.json",
  "global": {
    "--help": {
      "type": "bool",
      "reason": "Standard help flag"
    },
    "--verbose": {
      "type": "bool",
      "reason": "Increase logging verbosity"
    },
    "--debug": {
      "type": "bool",
      "reason": "Debug logging"
    },
    "--only-show-errors": {
      "type": "bool",
      "reason": "Only show errors"
    },
    "--yes": {
      "type": "bool",
      "reason": "Skip confirmation prompts"
    }
  },
  "commands": {
    "storage.blob.upload": {
      "--overwrite": {
        "type": "bool",
        "reason": "Overwrite existing blob"
